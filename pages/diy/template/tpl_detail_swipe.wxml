<!--轮播start-->      
        <view style='height:{{advWidth}}px;position:relative;display:{{showvideo?"block":"none"}}' wx:if='{{goods.video}}'>
          <view wx:if='{{cover}}'>
            <image class='bg' src='{{goods.thumb}}' style='height:100%;width:100%'></image>
            <image class='play' src='{{play}}' style='width:150rpx;height:140rpx'bindtap='startplay'></image>
            <view class='mc'>
                <view class='video_btn active' bindtap='showvideo'>视频</view>
                <view class='pic_btn' bindtap='showpic'>图片</view>
            </view>
          </view>
          <video id="myVideo" src="{{goods.video}}" bindpause ='bindpause' controls style="width:{{advWidth}}px;height:{{advWidth}}px;" class="video {{showpic||cover?'none':'block'}}" muted='{{soundpic}}' bindfullscreenchange='bindfullscreenchange'>
            <cover-image src='{{sound?voice:mute}}' class='voice' bindtap='changevoice'></cover-image>  
            <cover-view class='mc' wx:if='{{success}}'>
                <cover-view class='video_btn active'>视频</cover-view>
                <cover-view class='pic_btn' bindtap='showpic'>图片</cover-view>  
            </cover-view>
          </video>        
        </view> 
        <view class="goods-advs {{showpic || goods.video == ''?'block':'none'}}" style="width:{{advWidth}}px;height:auto;position:relative">
            <swiper class="index-adcs-sqiper" indicator-dots="{{indicatorDots}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" style="width:{{advWidth}}px;height:{{advHeight}}px;">
                <block wx:for="{{goods.thumbs}}" wx:for-index="idx" wx:for-item="item">
                    <swiper-item style="background-image:url('{{item}}')">
                        <image src="{{item}}" class="goodsadvimg"></image>          
                    </swiper-item>
                </block>
            </swiper>
            <view class='mc'>
              <view class='video_btn' bindtap='showvideo' wx:if='{{goods.video}}'>视频</view>
              <view class='pic_btn active' bindtap='showpic' wx:if='{{goods.video}}'>图片</view>
          </view>
        </view>
<!--轮播end-->