<scroll-view scroll-x='true' class='fui-tabbar style1' wx:if="{{diyitem.id == 'tabbar' && diyitem.style.showtype == '1'}}">
  <block wx:for="{{diyitem.data}}" wx:for-item="items" wx:key="index">
    <view wx:if="{{diyitem.status == undefined || diyitem.status == '' || !diyitem.status}}" class="item" style="{{index == 0 ? 'color:' + diyitem.style.activecolor + ';background:' + diyitem.style.activebackground +';border-color:' + diyitem.style.activecolor  : 'color:' + diyitem.style.color + ';background:' + diyitem.style.background}}"  data-id="{{diyitemid}}" data-type="{{index}}" bindtap='tabwidget' data-url='{{ items.linkurl }}'>
      {{items.text || '选项'}}
    </view>
    <view wx:if="{{diyitem.status}}" class="item" style="{{diyitem.status == index ? 'color:' + diyitem.style.activecolor + ';background:' + diyitem.style.activebackground + ';border-color:' + diyitem.style.activecolor : 'color:' + diyitem.style.color + ';background:' + diyitem.style.background}}" data-id="{{diyitemid}}" data-type="{{index}}" bindtap='tabwidget' data-url='{{ items.linkurl }}'>
      {{items.text || '选项'}}
    </view>
  </block>
</scroll-view>
<view class='fui-tabbar style2' wx:if="{{diyitem.id == 'tabbar' && diyitem.style.showtype == '2'}}">
  <block wx:for="{{diyitem.data}}" wx:for-item="items" wx:key="index">
    <view wx:if="{{diyitem.status == undefined || diyitem.status == '' || !diyitem.status}}" class="item" style="{{index == 0 ? 'color:' + diyitem.style.activecolor + ';background:' + diyitem.style.activebackground +';border-color:' + diyitem.style.activecolor  : 'color:' + diyitem.style.color + ';background:' + diyitem.style.background}}"  data-id="{{diyitemid}}" data-type="{{index}}" bindtap='tabwidget' data-url='{{ items.linkurl }}'>
      {{items.text || '选项'}}
    </view>
    <view wx:if="{{diyitem.status}}" class="item" style="{{diyitem.status == index ? 'color:' + diyitem.style.activecolor + ';background:' + diyitem.style.activebackground + ';border-color:' + diyitem.style.activecolor : 'color:' + diyitem.style.color + ';background:' + diyitem.style.background}}" data-id="{{diyitemid}}" data-type="{{index}}" bindtap='tabwidget' data-url='{{ items.linkurl }}'>
      {{items.text || '选项'}}
    </view>
  </block>
</view>
<block wx:for="{{diyitem.data}}" wx:for-item="items" wx:key="index">
  <view wx:if="{{ diyitem.status == '' || diyitem.status == undefined}}">
    <include  wx:if="{{ index == 0}}" src="/pages/diy/template/tpl_tabbarlist.wxml"/>
  </view>
  <view wx:else>
    <include  wx:if="{{diyitem.status == index}}" src="/pages/diy/template/tpl_tabbarlist.wxml"/>
  </view>
  
</block>